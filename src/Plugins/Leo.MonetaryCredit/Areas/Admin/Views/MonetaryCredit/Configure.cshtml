@{
    Layout = "_ConfigurePlugin";
}
@model ConfigurationModel
@using Leo.MonetaryCredit.Models;
<input id="active-menu-item" type="hidden" value="/Admin/Payment/Methods" />
<form asp-controller="PaymentMonetaryCredit" asp-action="Configure" method="post">
    
    <div class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="LimitTotalRecharge" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="LimitTotalRecharge" />
                    <span asp-validation-for="LimitTotalRecharge"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="CreditRate" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="CreditRate" />
                    <span asp-validation-for="CreditRate"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3 col-sm-3 text-right">
                    <admin-label asp-for="DisplayOrder" class="control-label" />
                </div>
                <div class="col-md-9 col-sm-9">
                    <admin-input asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder"></span>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 offset-sm-3 col-md-9 col-sm-9">
                        <input type="submit" name="save" class="btn green" value="@Loc["Admin.Common.Save"]" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
